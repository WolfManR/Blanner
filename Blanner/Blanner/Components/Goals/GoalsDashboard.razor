@page "/goals-dashboard"
@attribute [Authorize]
@rendermode InteractiveAuto

<PageTitle>Goals</PageTitle>

<FluentSplitter Orientation="Orientation.Horizontal" BarSize="6" Panel1MinSize="50%">

    <Panel1>
        <ActiveGoals OnSelected="OpenDetails"/>
    </Panel1>

    <Panel2>
       <ActiveGoalEditor @ref="_activeGoalEditorRef"/> 
    </Panel2>
    
</FluentSplitter>

@code {
    private ActiveGoalEditor? _activeGoalEditorRef;

    private async Task OpenDetails(int goalId) {
        if (_activeGoalEditorRef is null) return;
        await _activeGoalEditorRef.Open(goalId);
    }


    
}